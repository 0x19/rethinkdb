#!/usr/bin/env python

import os, subprocess, sys

sys.path.insert(0, os.path.join(os.path.dirname(os.path.realpath(__file__)), os.pardir, os.pardir, "common"))
import utils

targetFile = __file__[:-len('.test')]
if not __file__.endswith('.test') or not os.path.isfile(targetFile):
    raise Exception('Could not find target file: %s' % str(targetFile))

r = utils.import_python_driver()

dbName = 'test'
tableName = 'test'

# -- make sure a server is avalible

server = None
host = None
port = None

if not 'RDB_DRIVER_PORT' in os.environ:
    import driver
    
    serverExe = sys.argv[1] if len(sys.argv) > 1 else utils.find_rethinkdb_executable()
    server = driver.Process(executable_path=serverExe)
    
    # expose the server info for the subprocess
    
    os.environ['RDB_DRIVER_PORT'] = port = str(server.driver_port)
    os.environ['RDB_SERVER_HOST'] = host = server.host
else:
    host = os.environ['RDB_SERVER_HOST']
    port = int(os.environ['RDB_DRIVER_PORT'])

# -- create the test database and table

conn = r.connect(host=host, port=port)
r.expr([dbName]).set_difference(r.db_list()).for_each(r.db_create(r.row)).run(conn)
r.expr([tableName]).set_difference(r.db(dbName).table_list()).for_each(r.db(dbName).table_create(r.row)).run(conn)

# -- ensure a clean table

r.db(dbName).table(tableName).delete().run(conn)

# -- Run with mocha

# disabling following line due to #4178
#os.environ['BLUEBIRD_DEBUG'] = '1' # better stacktraces

mochaReporterOptions = ['-R', 'spec']
if not utils.supportsTerminalColors():
    mochaReporterOptions += ['--no-colors'] # handle visionmedia/mocha#1304

sys.exit(subprocess.call(['_mocha'] + mochaReporterOptions + [targetFile]))
