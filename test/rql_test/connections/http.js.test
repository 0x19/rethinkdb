#!/usr/bin/env python

import os, sys, subprocess, time

sys.path.insert(0, os.path.join(os.path.dirname(os.path.realpath(__file__)), os.pardir, os.pardir, "common"))
import driver, utils

if not os.path.isdir('run'):
    os.makedirs('run')

httpServerPath = os.path.join(os.path.dirname(os.path.realpath(__file__)), 'http_support', 'server')
httpbinPort = utils.get_avalible_port()
httpPort = utils.get_avalible_port()
sslPort = utils.get_avalible_port()
httpServerProcess = subprocess.Popen([httpServerPath, '--httpbin-port', str(httpbinPort), '--http-port', str(httpPort), '--ssl-port', str(sslPort)], stdout=subprocess.PIPE, stderr=subprocess.STDOUT)
time.sleep(.5)
assert httpServerProcess.poll() is None

os.environ['HTTPBIN_TEST_ADDRESS'] = 'localhost:%d' % httpbinPort
os.environ['HTTP_TEST_ADDRESS'] = 'localhost:%d' % httpPort
os.environ['HTTPS_TEST_ADDRESS'] = 'localhost:%d' % sslPort

executable_path = sys.argv[1] if len(sys.argv) > 1 else utils.find_rethinkdb_executable()
os.environ['RDB_EXE_PATH'] = executable_path

mochaReporterOptions = ['-R', 'spec']
if not utils.supportsTerminalColors():
    mochaReporterOptions += ['--no-colors'] # handle https://github.com/mochajs/mocha/issues/1304

server = None
if os.environ.get('RDB_DRIVER_PORT') is None:
    server = driver.Process(executable_path=executable_path)
    os.environ['RDB_DRIVER_PORT'] = str(server.driver_port)

sys.exit(subprocess.call(['_mocha'] + mochaReporterOptions + ['--timeout', '10000', os.path.join(os.path.dirname(__file__), 'http.js')]))
